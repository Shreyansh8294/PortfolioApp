<?xml version="1.0" encoding="utf-8"?>
<ScrollView
    android:layout_width="match_parent"
    android:layout_height="match_parent"

    xmlns:android="http://schemas.android.com/apk/res/android">


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/my_layout"
        android:orientation="vertical">

        <ImageView
            android:id="@+id/gccp_certificate"
            android:layout_width="400dp"
            android:layout_height="280dp"
            android:layout_gravity="center"
            android:contentDescription="@string/gccp_certificate"
            android:padding="30dp"
            android:src="@drawable/gccp_certificate" />
        <TextView
            android:id="@+id/gccp_text"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/google_cloud_career_practitioner_gccp_2022"
            android:fontFamily="serif"
            android:layout_gravity="center"
            />

        <ImageView
            android:layout_width="400dp"
            android:layout_height="243dp"
            android:layout_gravity="center"
            android:contentDescription="@string/gdsc_volunteer_certificate"
            android:padding="30dp"
            android:src="@drawable/gdsc_volunteer_certificate" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/gdsc_certificate_text"
            android:text="@string/gdsc_volunteer_2022_23"
            android:layout_gravity="center"
            android:fontFamily="serif"
            />

        <ImageView
            android:id="@+id/coding_ninja_cert"
            android:layout_width="400dp"
            android:layout_height="243dp"
            android:layout_gravity="center"
            android:contentDescription="@string/certificate_of_participation_coding_ninjas"
            android:padding="30dp"
            android:src="@drawable/cdnj_certificate" />
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/coding_ninja_txt"
            android:text="@string/participation_certificate_in_coding_challenge"
            android:fontFamily="serif"
            android:layout_gravity="center"
            android:layout_marginBottom="20dp"/>


    </LinearLayout>



</ScrollView>